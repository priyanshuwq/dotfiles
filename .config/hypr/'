# Application bindings
$terminal = uwsm app -- $TERMINAL
$browser = omarchy-launch-browser

#Unbind
unbind = SUPER, W
unbind = SUPER, D
unbind = SUPER, ESCAPE
unbind = SUPER, TAB
unbind = SUPER, P
unbind = SUPER , V
unbind = ALT , PRINT
unbind = ALT SHIFT , PRINT
unbind = CTRL ALT, PRINT
unbind = CTRL ALT SHIFT , PRINT
# unbind = , PRINT
unbind = SHIFT, PRINT
unbind = CTRL, PRINT
unbind = SUPER, BACKSPACE
unbind = SUPER, F
unbind = SUPER, O

bindd = SUPER, return, Terminal, exec, $terminal --dir="$(omarchy-cmd-terminal-cwd)"
bindd = SUPER, F, File manager, exec, uwsm app -- nautilus --new-window
bindd = SUPER, B, Browser, exec, $browser
bindd = SUPER SHIFT, B, Browser (private), exec, $browser --private
bindd = SUPER, M, Music, exec, omarchy-launch-or-focus spotify
bindd = SUPER, N, Editor, exec, omarchy-launch-editor
bindd = SUPER SHIFT, T, Activity, exec, $terminal -e btop
# bindd = SUPER, D, Docker, exec, $terminal -e lazydocker
# bindd = SUPER, O, Obsidian, exec, omarchy-launch-or-focus obsidian "uwsm app -- obsidian -disable-gpu --enable-wayland-ime"
bindd = SUPER, slash, Passwords, exec, uwsm app -- 1password
bindd = SUPER, period, Clipboard, exec, walker -m clipboard
bindd = SUPER, D, Discord, exec, uwsm app --  vesktop
bindd = SUPER, C, code, exec, uwsm app -- code


# If your web app url contains #, type it as ## to prevent hyperland treat it as comments
bindd = SUPER, A, ChatGPT, exec, omarchy-launch-webapp "https://chatgpt.com"
bindd = SUPER SHIFT, A, Grok, exec, omarchy-launch-webapp "https://grok.com"
bindd = SUPER, Y, YouTube, exec, omarchy-launch-or-focus-webapp YouTube "https://youtube.com/"
bindd = SUPER, W, WhatsApp, exec, omarchy-launch-or-focus-webapp WhatsApp "https://web.whatsapp.com/"
bindd = SUPER, X, X, exec, omarchy-launch-webapp "https://x.com/"
bindd = SUPER, G, Github, exec, omarchy-launch-webapp "https://github.com/priyanshuwq"

# Close Windows
bind = SUPER, Q, killactive,
# bind = CTRL ALT, DELETE, Close all Windows, exec, omarchy-cmd-close-all-windows

# Control tiling
bind = Alt, return, fullscreen,

# Power
bindd = SUPER SHIFT, L, lock, exec, hyprlock
bindd = SUPER ALT, L, poweroff, exec, poweroff
bindd = SUPER, backspace , Power menu, exec, omarchy-menu system
bindd = ALT, BACKSPACE, Toggle window transparency, exec, hyprctl dispatch setprop "address:$(hyprctl activewindow -j | jq -r '.address')" opaque toggle

# Screenshots
bindd = , F8, Screenshot of region, exec, omarchy-cmd-screenshot
bindd = SUPER SHIFT, P, Screenshot of window, exec, omarchy-cmd-screenshot window
bindd = SUPER CTRL, P, Screenshot of display, exec, omarchy-cmd-screenshot output

# Screen recordings
# bindd = SUPER , R, Screen record display, exec, omarchy-cmd-screenrecord
# bindd = SUPER ALT, R, Screen record display with audio, exec, omarchy-cmd-screenrecord output audio
# bindd = SUPER CTRL, R, Screen record a region, exec, omarchy-cmd-screenrecord region
# bindd = SUPER  ALT SHIFT, R, Screen record a region, exec, omarchy-cmd-screenrecord region audio
bind = SUPER, R, exec, ~/.local/bin/record_region.sh

# Color picker
bindd = Alt, P, Color picker, exec, pkill hyprpicker || hyprpicker -a

